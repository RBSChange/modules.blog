<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_website/websitetopicsfolder" />
			</children>
			<drops>
				<drop model="modules_website/websitetopicsfolder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="addTopic" />
				<contextaction name="openTreeNodeOrder" />		
			</contextactions>
		</model>
		<model name="modules_website/websitetopicsfolder">
			<children>
				<child model="modules_website/topic" from="topics" />
				<child model="modules_website/systemtopic" from="topics" />
			</children>
			<columns>
				<column name="pathOf" label="PathOf" flex="3" />
			</columns>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="openTopicOrder"/>
				<contextaction name="initFrontadminStructure"/>
			</contextactions>
		</model>
		<model name="modules_website/topic">
			<children>
				<child model="modules_website/topic" />
				<child model="modules_website/systemtopic" />
				<child model="modules_blog/blog" />
			</children>
			<drops>
				<drop model="modules_blog/blog" action="move" />
			</drops>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="edit" />
				<contextaction name="createBlog" />
				<contextaction name="initDefaultStruct" />
			</contextactions>
		</model>
		<model name="modules_website/systemtopic">
			<children>
				<child model="modules_website/topic" />
				<child model="modules_website/systemtopic" />
				<child model="modules_blog/blog" />
			</children>
			<drops>
				<drop model="modules_blog/blog" action="move" />
			</drops>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="edit" />
				<contextaction name="createBlog" />
				<contextaction name="initDefaultStruct" />
			</contextactions>
		</model>
		<model name="modules_blog/postfolder">
			<children>
				<child model="modules_blog/post" from="function"/>
			</children>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="createPost" />
			</contextactions>
		</model>
		<model name="modules_blog/categoryfolder">
			<children>
				<child model="modules_blog/category" />
			</children>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="createCategory" />
			</contextactions>
		</model>
		<model name="modules_blog/keywordfolder">
			<children>
				<child model="modules_blog/keyword" from="function"/>
			</children>
			<columns>
				<column name="postCount" label="Post-count" flex="2" />
				<column name="publishedPostCount" label="Published-post-count" flex="2" />
			</columns>
			<contextactions>
				<contextaction name="openFolder" />
				<contextaction name="createKeyword" />
			</contextactions>
		</model>
		<model name="modules_blog/blog">
			<children>
				<child model="modules_blog/postfolder" />
				<child model="modules_blog/categoryfolder" />
				<child model="modules_blog/keywordfolder"/>
			</children>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="deleteBlog" />
				<contextaction name="createPost" />
			</contextactions>
		</model>
		<model name="modules_blog/post">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="previewPost" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
				<contextaction name="createPost" />
				<contextaction name="delete" />
			</contextactions>
		</model>
		<model name="modules_blog/keyword">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="createPost" />
			</contextactions>
		</model>
		<model name="modules_blog/preferences">
			<contextactions>
				<contextaction name="delete" />
				<contextaction name="edit" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
		<model name="modules_blog/category">
			<children>
				<child model="modules_blog/post" from="post"/>
				<child model="modules_blog/category" />
			</children>
			<contextactions>
				<contextaction name="edit" />
				<groupactions name="createOnCategory">
					<contextaction name="createCategory" />
					<contextaction name="createPost" />
				</groupactions>
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="previewPost" />	
		<toolbarbutton name="delete" />
		<toolbarbutton name="activate" />
		<toolbarbutton name="deactivated" />
		<toolbarbutton name="reactivate" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="deleteBlog" permission="Delete" icon="delete" label="&amp;modules.blog.bo.actions.Delete-blog;" />
		<action name="activate" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;" />
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;" />
		<action name="addTopic" permission="Update_rootfolder" icon="add-topic" label="&amp;modules.uixul.bo.actions.AddTopic;" />
		<action name="openTopicOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;"/>
		<action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="createBlog" permission="Insert_blog" icon="add" label="&amp;modules.blog.bo.actions.Create-Blog;" />
		<action name="createCategory" permission="Insert_category" icon="add" label="&amp;modules.blog.bo.actions.Create-Category;" />
		<action name="createOnCategory" single="true" actions="createCategory,createGroup" icon="add" />
		<action name="createPost" permission="Insert_post" icon="add" label="&amp;modules.blog.bo.actions.Create-Post;" />
		<action name="createKeyword" permission="Insert_keyword" icon="add" label="&amp;modules.blog.bo.actions.Create-Keyword;" />
		<action name="createFolder" single="true" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />	
		<action name="previewPost" single="true" permission="PreviewPost" icon="preview" label="&amp;modules.blog.bo.actions.PreviewPost;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="initDefaultStruct" single="true" permission="InitDefaultStruct" icon="add" label="&amp;modules.website.bo.actions.Init-default-struct;"/>
		<action name="initFrontadminStructure" single="true" permission="InitDefaultStruct" icon="add" label="&amp;modules.blog.bo.actions.Init-frontadmin-struct;"/>
	</actions>
</perspective>