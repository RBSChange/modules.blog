<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/website/persistentdocument/import/website_binding.xml" />

	<topic byDocumentId-attr="">
		<page byLabel="Liste des blogs" isIndexPage="true" indexingstatus="false" navigationVisibility="hidden">
			<tag name="functional_blog_blog-list" />
			<changecontent for="content-block">
				<changeblock type="modules_blog_blogcontextuallist" />
			</changecontent>
		</page>

		<page byTag="functional_blog_blog-detail" label="Blog" navigationVisibility="hidden" indexingstatus="false"
			metatitle="{blog_blog.blogLabel} - {blog_blog.siteLabel}"
			description="Blog {blog_blog.blogLabel} - {blog_blog.siteLabel} : {blog_blog.blogDescription}">
			<changecontent for="content-block">
				<changeblock type="modules_blog_blog" />
			</changecontent>
			<changecontent for="sidebar-block">
				<changeblock type="modules_blog_categoryList" />
				<changeblock type="modules_blog_keywordList" __cloud="true" />
				<changeblock type="modules_blog_archivesList" />
			</changecontent>
		</page>
		
		<page byTag="functional_blog_category-detail" label="Catégorie" navigationVisibility="hidden" indexingstatus="false"
			metatitle="{blog_category.categoryLabel} - {blog_category.blogLabel} - {blog_category.siteLabel}"
			description="{blog_category.categoryLabel} : billets de la catégorie {blog_category.categoryLabel} du blog {blog_category.blogLabel} - {blog_category.categoryDescription}">
			<changecontent for="content-block">
				<changeblock type="modules_blog_category" />
			</changecontent>
			<changecontent for="sidebar-block">
				<changeblock type="modules_blog_categoryList" />
				<changeblock type="modules_blog_keywordList" __cloud="true" />
				<changeblock type="modules_blog_archivesList" />
			</changecontent>
		</page>
		
		<page byTag="functional_blog_keyword-detail" label="Mot clé" navigationVisibility="hidden" indexingstatus="false"
			metatitle="{blog_keyword.keywordLabel} - {blog_keyword.blogLabel} - {blog_keyword.siteLabel}"
			description="Billets {blog_keyword.keywordLabel} : du blog {blog_keyword.blogLabel}. {blog_keyword.keywordDescription}">
			<changecontent for="content-block">
				<changeblock type="modules_blog_keyword" />
			</changecontent>
			<changecontent for="sidebar-block">
				<changeblock type="modules_blog_categoryList" />
				<changeblock type="modules_blog_keywordList" __cloud="true" />
				<changeblock type="modules_blog_archivesList" />
			</changecontent>
		</page>
		
		<page byTag="functional_blog_post-detail" label="Billet" navigationVisibility="hidden" indexingstatus="false"
			metatitle="{blog_post.postLabel} - {blog_post.blogLabel} - {blog_post.siteLabel}"
			description="{blog_post.postLabel} : billet du blog {blog_post.blogLabel} sur le site {blog_post.siteLabel} créé le {blog_post.postDate}. {blog_post.postSummary}">
			<changecontent for="content-block">
				<changeblock type="modules_blog_post" />
				<changeblock type="modules_blog_comments" />
			</changecontent>
			<changecontent for="sidebar-block">
				<changeblock type="modules_blog_categoryList" />
				<changeblock type="modules_blog_keywordList" __cloud="true" />
				<changeblock type="modules_blog_archivesList" />
			</changecontent>
		</page>
		
		<page byTag="functional_blog_archives" label="Archives" navigationVisibility="hidden" indexingstatus="false"
			metatitle="Billets {blog_archives.date} - {blog_archives.blogLabel} - {blog_archives.siteLabel}"
			description="Archives des billets de {blog_archives.date} du blog {blog_archives.blogLabel} sur le site {blog_archives.siteLabel}.">
			<changecontent for="content-block">
				<changeblock type="modules_blog_archives" />
			</changecontent>
			<changecontent for="sidebar-block">
				<changeblock type="modules_blog_categoryList" />
				<changeblock type="modules_blog_keywordList" __cloud="true" />
				<changeblock type="modules_blog_archivesList" />
			</changecontent>
		</page>
	</topic>
</script>